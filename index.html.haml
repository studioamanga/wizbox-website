    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-18279263-1']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    :javascript
      currentScreenshotIndex = 1;
      previousScreenshot = null;
      setInterval(alternateScreenshots, 5000);
      
      function alternateScreenshots()
      {
        newScreenshot = document.getElementById('screen'+currentScreenshotIndex);
        if (previousScreenshot)
          previousScreenshot.style.opacity = '0';
        newScreenshot.style.opacity = '1';
        previousScreenshot = newScreenshot;
        currentScreenshotIndex ++;
        if (currentScreenshotIndex > 4) 
          currentScreenshotIndex = 1;
      }
